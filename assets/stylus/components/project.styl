.project
	width 300px
	height 300px
	margin-bottom 50px
	overflow hidden
	cursor pointer
	position relative
	background white center no-repeat
	box-shadow 0px 3px 3px 0px rgba(0,0,0,0.07)
	border-radius 2px
	opacity 0
	
	position relative
	top -20px
	
	transition all 200ms linear
	
	&_effect
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background white center no-repeat
		filter blur(10px)
		opacity 0
		transition opacity 300ms ease-in-out
		
	&_overlay
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color white
		opacity 0
		transition opacity 300ms ease-in-out
		
	&_link
		display flex
		justify-content center
		text-decoration none
		height 100%
			
	&:hover &_effect
		opacity .4
	&:hover &_info
		transition opacity 300ms ease-in-out 100ms
		opacity 1
	&:hover &_overlay
		opacity 1

	&_info
		transition opacity 200ms ease-in-out
		padding 40px 20px
		text-align center
		font-size 20px
		font-weight 400
		align-self center
		position relative
		opacity 0
		color $black